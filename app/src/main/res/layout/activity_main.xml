<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="290dp"
                    android:layout_marginLeft="34dp"
                    app:srcCompat="@drawable/placeholder">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="56dp"
                                    android:layout_marginTop="14dp"
                                    android:text="Petits pois et carrotes"
                                    android:textColor="@color/black"
                                    android:textSize="18dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/text_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="56dp"
                                    android:layout_marginTop="1dp"
                                    android:text="Cassegrain"
                                    android:textSize="15dp">

                                </TextView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="300dp"
                            >

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="14dp"
                            android:src="@drawable/nutri">

                        </ImageView>
                        </LinearLayout>
                </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/codebarid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codes barres: 3083680085304"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="56dp" />

                <TextView
                    android:id="@+id/quantiteid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantité : 400 g (280 g net égoutté)"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="56dp" />

                <TextView
                    android:id="@+id/text_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendu en : France, Japon, Suisse"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="56dp" />

                <TextView
                    android:id="@+id/text_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrédients : Petits pois 66%, eau, garniture 2,8% (salade, oignon grelot), sucre, sel, arôme naturel"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="34dp" />

                <TextView
                    android:id="@+id/text_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Substances allergènes : Aucune"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="34dp" />

                <TextView
                    android:id="@+id/text_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additifs : Aucun"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="34dp" />

        </LinearLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>